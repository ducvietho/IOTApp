<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_item"
    android:layout_marginLeft="@dimen/_6dp"
    android:layout_marginRight="@dimen/_6dp"
    android:layout_marginTop="@dimen/margin_item"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_group"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_6dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textAllCaps="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_15dp"
        android:layout_marginLeft="@dimen/_68dp"
        >
        <ImageView
            android:layout_width="@dimen/_15dp"
            android:layout_height="@dimen/_15dp"
            android:background="@drawable/alarm_on"
            android:id="@+id/img_alarm_on"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="@dimen/_15dp"
            android:layout_height="@dimen/_15dp"
            android:id="@+id/img_alarm_off"
            android:background="@drawable/alarm_off"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
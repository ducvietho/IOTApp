<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_30dp"
    android:layout_marginRight="@dimen/_30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/blueColor"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_turn_alarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="@string/alarm_on"
                android:textColor="@android:color/white" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_15dp"
                android:layout_weight="1"
                style="@style/SwitchCompatStyle"
                app:trackTint="@color/color_switch"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_alarm_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center_vertical"
            android:text="@string/alarm_setting"
            android:textColor="@android:color/white" />

    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:id="@+id/layout"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ducvietho.iotapp.screen.login.LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_ultraw"
            android:layout_marginLeft="@dimen/_40dp"
            android:layout_marginRight="@dimen/_40dp"
            android:layout_marginBottom="@dimen/_40dp"
            android:id="@+id/imge_logo"
            android:layout_marginTop="@dimen/_60dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="6dp"
            android:id="@+id/form_login"
            card_view:cardElevation="0dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_below="@+id/imge_logo"
            card_view:cardBackgroundColor="@color/blueBlur_50"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/_40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/ed_user"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height"
                            android:textColorHint="@android:color/white"
                            android:background="@drawable/background_edittext"
                            android:drawableLeft="@drawable/ic_user_left"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/white"
                            android:hint="@string/username"
                            android:padding="@dimen/padding"
                            android:textSize="@dimen/text_size" />
                        <ImageView
                            android:layout_width="@dimen/_30dp"
                            android:layout_height="@dimen/_30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/img_setting"
                            android:background="@drawable/setting_icon"
                            android:layout_marginRight="@dimen/_10dp"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"

                  >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/ed_pass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@android:color/white"
                            android:background="@drawable/background_edittext"
                            android:drawableLeft="@drawable/ic_lock_left"
                            android:hint="@string/pass"
                            android:inputType="textPassword"
                            android:textColor="@android:color/white"
                            android:paddingLeft="@dimen/padding"
                            android:textSize="@dimen/text_size"
                            />
                        <ImageView
                            android:layout_width="@dimen/_30dp"
                            android:layout_height="@dimen/_30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/img_not"
                            android:background="@drawable/ic_eye_invisible"
                            android:layout_marginRight="@dimen/_10dp"/>
                        <ImageView
                            android:layout_width="@dimen/_30dp"
                            android:layout_height="@dimen/_30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/img_show"
                            android:background="@drawable/ic_eye_visible"
                            android:layout_marginRight="@dimen/_10dp"
                            android:visibility="gone"/>
                    </RelativeLayout>


                </android.support.v7.widget.CardView>
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp"
                    android:layout_marginTop="@dimen/_30dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cb_remember"
                        android:buttonTint="@android:color/white"
                        android:backgroundTint="@android:color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/member"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_member"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    card_view:cardCornerRadius="6dp"
                    android:layout_marginBottom="@dimen/_40dp">

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:background="@color/colorOrange"
                        android:gravity="center"
                        android:text="@string/login"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size"
                        android:textAllCaps="true"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/form_login"
            android:text="@string/forget_pass"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size"
           android:gravity="right"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_marginRight="@dimen/_20dp"
            android:id="@+id/tv_forget"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="@dimen/_40dp"
              android:layout_alignParentBottom="true"
              android:text="@string/copy_right"
              android:gravity="center"
              android:id="@+id/tv_copy"
              android:textColor="@android:color/white"
              android:alpha="0.5"/>
    </RelativeLayout>

</RelativeLayout>

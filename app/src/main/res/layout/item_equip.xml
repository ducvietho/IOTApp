<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_15dp"
    android:layout_marginLeft="@dimen/_6dp"
    android:layout_marginRight="@dimen/_6dp"
    android:layout_marginTop="@dimen/_15dp"
    android:background="@android:color/transparent"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

            <ImageView
                android:id="@+id/img_equip"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_6dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/width_equip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textAllCaps="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_15dp"
       android:layout_marginLeft="@dimen/_70dp"
        >
        <ImageView
            android:layout_width="@dimen/_15dp"
            android:layout_height="@dimen/_15dp"
            android:background="@drawable/alarm_on"
            android:id="@+id/img_alarm_on"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="@dimen/_15dp"
            android:layout_height="@dimen/_15dp"
            android:id="@+id/img_alarm_off"
            android:background="@drawable/alarm_off"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
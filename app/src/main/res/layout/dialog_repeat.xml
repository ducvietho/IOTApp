            android:layout_marginLeft="@dimen/_15dp"
            android:layout_weight="12"
            android:gravity="center_vertical"
            android:text="Thứ ba"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size" />

        <ImageView
